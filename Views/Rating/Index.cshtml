@model IEnumerable<QA_Feedback.Models.Rating>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Difficulty_Stars)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pyramidality_Stars)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Accuracy_Stars)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a href="Questions/Details/@item.Question">@Html.DisplayFor(modelItem => item.Question)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Difficulty_Stars)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pyramidality_Stars)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accuracy_Stars)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
